{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@public/*": ["public/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@connectors/*": ["src/connectors/*"],
      "@connectors": ["src/connectors"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@views/*": ["src/views/*"],
      "@views": ["src/views"],
      "@widgets/*": ["src/widgets/*"],
      "@widgets": ["src/widgets"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@state/*": ["src/state/*"],
      "@state": ["src/state"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
